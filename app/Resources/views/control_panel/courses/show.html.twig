{% extends '_base/admin_base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Kurs</h1>
        <hr>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-success btn-sm btn-flat" href="{{ path('cp_create_course') }}">Nytt kurs <i class="fa fa-plus"></i></a>
            </div>
        </div>
        <br>
        <div class="row text-center">
            {% for course in courses %}
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="box box-warning">
                        <div class="box-body course">
                            <div class="img-container">
                                <img src="{{ course.courseType.imgUrl }}" alt="{{ course.name }}">
                            </div>
                            <div>
                                <h3>{{ course.name }}</h3>
                                <p class="description">{{ course.description }}</p>
                            </div>
                            <footer>
                                <a href="{{ path('cp_course_time_table', {'id': course.id}) }}" class="btn btn-success btn-flat">Timeplan</a>
                                <a href="{{ path('cp_edit_course', {'id': course.id}) }}" class="btn btn-primary btn-flat">Endre</a>
                                <a href="{{ path('cp_delete_course', {'id': course.id}) }}" class="btn btn-danger btn-flat onclick-disable">Slett</a>
                            </footer>
                            </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}