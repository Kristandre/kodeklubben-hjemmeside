<div class="row">
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <label class="control-label required" for="{{ idString }}Content" >{{ label }}</label>
                <textarea rows="{{ rows }}" id="{{ idString }}Content" required="required" class="form-control">{{ render(controller('AppBundle:StaticContent:getContent', {'idString': idString}))|replace({'<br>':'\n'})|raw }}</textarea>
            </div>

            <button type="button" class="btn btn-primary btn-sm btn-flat" id="{{ buttonId }}">{{ buttonLabel }}</button>
        </form>
    </div>
</div>