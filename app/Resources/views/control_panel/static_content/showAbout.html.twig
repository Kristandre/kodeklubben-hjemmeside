{% extends '_base/admin_base.html.twig' %}
{% set labelParticipant, buttonIdParticipant, idStringParticipant, buttonLabelParticipant, rowsParticipant = 'Om Oss for Deltakere', 'submitAboutParticipant', 'about_participant', 'Endre Deltakere', 10 %}
{% set labelTutor, buttonIdTutor, idStringTutor, buttonLabelTutor, rowsTutor = 'Om Oss for Veiledere', 'submitAboutTutor', 'about_tutor', 'Endre Veileder', 10 %}
{% block body %}
    <section class="content-header">
        <h1>Statisk innhold: Om oss</h1>
        <hr>
    </section>

    <section class="content">
        {% include 'control_panel/static_content/form_textarea.html.twig' with {'label': labelParticipant, 'buttonId': buttonIdParticipant, 'idString': idStringParticipant, 'buttonLabel': buttonLabelParticipant, 'rows': rowsParticipant} %}
        <br>
        <br>
        {% include 'control_panel/static_content/form_textarea.html.twig' with {'label': labelTutor, 'buttonId': buttonIdTutor, 'idString': idStringTutor, 'buttonLabel': buttonLabelTutor, 'rows': rowsTutor} %}
    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/static_content_api.js') }}" type="text/javascript"></script>
    <script>
        handleStaticContentFormSubmit($('#{{ buttonIdParticipant }}'), '{{ idStringParticipant }}', $('#{{ idStringParticipant }}Content'));
        handleStaticContentFormSubmit($('#{{ buttonIdTutor }}'), '{{ idStringTutor }}', $('#{{ idStringTutor }}Content'));
    </script>
{% endblock %}