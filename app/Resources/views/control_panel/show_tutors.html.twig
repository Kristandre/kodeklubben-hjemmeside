{% extends '_base/admin_base.html.twig' %}

{% block body %}
    <header class="content-header">
        <h1>Veiledere</h1>
        <hr>
        <div class="dropdown">
            <button class="btn btn-primary btn-flat btn-sm dropdown-toggle" type="button" data-toggle="dropdown">{{ semester }}
                <span class="caret"></span></button>
            <ul class="dropdown-menu">
                {% for sem in semesters %}
                    <li><a href="{{ path('cp_tutors', {'semesterId': sem.id}) }}">{{ sem }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </header>
    <section class="content">
        <div class="box box-info">
            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-striped table-fixed">
                        <thead>
                        <tr>
                            <th>Navn</th>
                            <th>E-post</th>
                            <th>Telefon</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for course in courses %}
                            {% if course.tutors|length %}
                                <tr>
                                    <td>
                                        <h5 class="text-bold">{{ course.name }} ({{ course.description }})</h5>
                                    </td>
                                </tr>
                                {% for tutor in course.tutors %}
                                    <tr>
                                        <td>{{ tutor.fullName }}</td>
                                        <td>{{ tutor.email }}</td>
                                        <td>{{ tutor.phone }}</td>
                                        <td><a class="text-danger no-text-decoration onclick-disable"
                                               href="{{ path('withdraw_from_course_tutor', {courseId: course.id, tutorId: tutor.id}) }}">Fjern</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}

{% endblock %}

