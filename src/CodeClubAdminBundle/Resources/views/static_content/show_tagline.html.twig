{% extends '@CodeClubAdmin/_base/admin_base.html.twig' %}

{% set label, buttonId, idString, buttonLabel, rows = 'Tagline', 'submitTagline', 'tagline', 'Endre Tagline', 2 %}

{% block body %}
    <section class="content-header">
        <h1>Statisk innhold: Tagline</h1>
        <hr>
    </section>

    <section class="content">
        {% include '@CodeClubAdmin/static_content/form_textarea.html.twig' with {'label': label, 'buttonId': buttonId, 'idString': idString, 'buttonLabel': buttonLabel, 'rows': rows} %}
    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script src="{{ asset('js/static_content_api.js') }}" type="text/javascript"></script>
    <script>
        handleStaticContentFormSubmit($('#{{ buttonId }}'), '{{ idString }}', $('#{{ idString }}Content'));
    </script>
{% endblock %}