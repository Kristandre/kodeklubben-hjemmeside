{% extends '@CodeClubAdmin/_base/admin_base.html.twig' %}

{% block body %}
    <header class="content-header">
        <a class="btn btn-default btn-sm float-right" href="{{ path('cp_course') }}"><i class="fa fa-reply"></i> Alle kurs</a>
        <h1>Kursdeltakere {{ course.name }}</h1>
        <p>{{ course.description }}</p>

    </header>
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Deltakere</h3>
            </div>
            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-striped table-fixed">
                        <thead>
                        <tr>
                            <th>Navn</th>
                            <th>E-post</th>
                            <th>Telefon</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for participant in course.participants %}
                            <tr>
                                <td>{{ participant.fullName }}</td>
                                <td>{{ participant.user.email }}</td>
                                <td>{{ participant.user.phone }}</td>
                                <td><a class="text-danger no-text-decoration onclick-disable" href="{{ path('withdraw_from_course_participant', {id: participant.id}) }}">Fjern</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% if (not course.participants|length) %}<h5 class="text-bold text-warning">Ingen har meldt seg p√• dette kurset
                        enda</h5>{% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}

{% endblock %}

