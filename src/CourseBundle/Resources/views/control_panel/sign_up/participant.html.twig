{% extends '@Admin/_base/admin_base.html.twig' %}

{% block body %}
    <header class="content-header">
        <h1>Påmelding for: {{ user.fullName }}</h1>
        <hr>
    </header>
    <div class="content">
        {% include 'common/flash_message.html.twig' with {'type': 'danger'} %}
        {% include 'common/flash_message.html.twig' with {'type': 'warning'} %}
        {% include 'common/flash_message.html.twig' with {'type': 'success'} %}
        <h1 class="text-center">Påmelding for deltakere {{ currentSemester }}</h1>
        <hr>
        {% if participants|length %}
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4>{{ user.fullName }} er påmeldt følgende kurs:</h4>
                        </div>
                        <div class="box-body">
                            <table class="table table-striped table-fixed">
                                <thead>
                                <tr>
                                    <th>Kurs</th>
                                    <th>Beskrivelse</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for participant in participants %}
                                    <tr>
                                        <td>{{ participant.course.name }}</td>
                                        <td>{{ participant.course.description }}</td>
                                        <td>
                                            <a href="{{ path('withdraw_from_course_participant', {'id': participant.id}) }}"
                                               class="btn btn-warning btn-xs btn-flat float-right onclick-disable">Meld
                                                av</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {% for courseTypeName in courseTypes|keys %}
            <div class="row">
                <div class="col-lg-12">
                    <h3 id="{{ courseTypeName }}">{{ courseTypeName }}</h3>

                    <div class="row is-flex text-center">
                        {% for course in courseTypes[courseTypeName] %}
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                <div class="box box-primary">
                                    <div class="box-body">
                                        <div>
                                            <h4><b>{{ course.name }}</b></h4>
                                            <p class="description">{{ course.description }}</p>
                                            {% include '@CodeClub/sign_up/course_time_table.html.twig' with {'course': course} %}
                                        </div>
                                        <div class="pull-down">
                                            <footer>
                                                {% set alreadySignedUp = false %}
                                                {% for participant in participants %}
                                                    {% if participant.course == course %}
                                                        {% set alreadySignedUp = true %}
                                                    {% endif %}
                                                {% endfor %}

                                                {% set placesLeft = course.participantLimit-course.participants|length %}
                                                {% if placesLeft == 0 %}
                                                    {% set placesLeftClass = 'text-danger' %}
                                                {% elseif placesLeft <= 5 %}
                                                    {% set placesLeftClass = 'text-warning' %}
                                                {% else %}
                                                    {% set placesLeftClass = 'text-success' %}
                                                {% endif %}

                                                <p class="{{ placesLeftClass }} text-bold">{{ placesLeft }} {{ placesLeft == 1 ? 'ledig plass' : 'ledige plasser' }}</p>
                                                {% if placesLeft <= 0 %}
                                                    <button disabled class="btn btn-primary btn-sm">Fullt</button>
                                                {% else %}
                                                    <form method="POST" action="{{ path('cp_sign_up_course', {'course': course.id, 'user': user.id}) }}">
                                                    <button type="submit" {{ alreadySignedUp ? 'disabled' }}
                                                       class="btn btn-primary btn-sm btn-sign-up onclick-disable">{{ alreadySignedUp ? 'Påmeldt': 'Meld
                                                på' }}</button>
                                                {% endif %}
                                                <a href="{{ path('course_info', {id: course.id}) }}"
                                                   class="btn btn-sm btn-default">Mer
                                                    info</a>
                                                    </form>
                                            </footer>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var $timeTables = $('.time-table');
            $timeTables.each(function () {
                sortTableByAttribute($(this), 'timestamp', true);
            })
        })
    </script>
{% endblock %}
