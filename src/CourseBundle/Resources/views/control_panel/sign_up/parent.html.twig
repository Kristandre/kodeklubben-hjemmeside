{% extends 'base/control_panel/admin_base.html.twig' %}

{% block body %}
    <header class="content-header">
        <h1>P책melding for: {{ user.fullName }}</h1>
        <hr>
    </header>
    <div class="content">
        {% include 'common/flash_message.html.twig' with {'type': 'danger'} %}
        {% include 'common/flash_message.html.twig' with {'type': 'warning'} %}
        {% include 'common/flash_message.html.twig' with {'type': 'success'} %}
        <h1 class="text-center">P책melding for barn til foresatte {{ currentSemester }}</h1>
        <hr>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-0 {{ participants|length ? 'col-lg-push-6' }}">
                <div class="box box-info">
                    <div class="box-header">
                        <h4>{{ user.fullName }} sine barn <a href="{{ path('cp_child_create', {'user': user.id}) }}" class="btn btn-xs btn-success float-right">Nytt
                                barn <i class="fa fa-plus"></i></a></h4>
                    </div>
                    <div class="box-body">
                        {% if not children|length %}
                            <p>Ingen barn</p>
                        {% else %}
                            <table class="table table-striped table-fixed">
                                <thead>
                                <tr>
                                    <th>Fornavn</th>
                                    <th>Etternavn</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for child in children %}
                                    <tr>
                                        <td>{{ child.firstName }}</td>
                                        <td>{{ child.lastName }}</td>
                                        <td>
                                            <form method="POST"
                                                  onsubmit="return confirm('Er du sikker p책 at du vil slette {{ child }}?')"
                                                  action="{{ path('child_delete', {'id': child.id}) }}">
                                                <button type="submit"
                                                        class="btn btn-danger btn-xs btn-flat float-right onclick-disable">
                                                    Slett
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if participants|length %}
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-0 col-lg-pull-6">
                    {% include '@Course/sign_up/signed_up_children.html.twig' with {isAdmin: true} %}
                </div>
            {% endif %}

        </div>

        {% for courseTypeName in courseTypes|keys %}
            <div class="row">
                <div class="col-lg-12">
                    <h3 id="{{ courseTypeName }}">{{ courseTypeName }}</h3>

                    <div class="row is-flex text-center">
                        {% for course in courseTypes[courseTypeName] %}
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                <div class="box box-primary">
                                    <div class="box-body">
                                        <div>
                                            <h4><b>{{ course.name }}</b></h4>
                                            <p class="description">{{ course.description }}</p>
                                            {% include '@Course/sign_up/course_time_table.html.twig' with {'course': course} %}
                                        </div>
                                        <div class="pull-down">
                                            <footer>
                                                <div class="form-group">
                                                    <label for="">Velg barn</label>
                                                    <select courseId="{{ course.id }}" class="form-control">
                                                        {% if children|length == 0 %}
                                                            <option>Ingen barn</option>
                                                        {% endif %}
                                                        {% for child in children %}
                                                            <option value="{{ child.id }}">{{ child.fullName }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>

                                                {% set placesLeft = course.participantLimit-course.participants|length %}
                                                {% if placesLeft == 0 %}
                                                    {% set placesLeftClass = 'text-danger' %}
                                                {% elseif placesLeft <= 5 %}
                                                    {% set placesLeftClass = 'text-warning' %}
                                                {% else %}
                                                    {% set placesLeftClass = 'text-success' %}
                                                {% endif %}

                                                <p class="{{ placesLeftClass }} text-bold">{{ placesLeft }} {{ placesLeft == 1 ? 'ledig plass' : 'ledige plasser' }}</p>

                                                <div class="form-group">
                                                    {% if placesLeft <= 0 %}
                                                        <button disabled class="btn btn-primary btn-sm">Fullt</button>
                                                    {% else %}
                                                        <button {{ children|length == 0 ? 'disabled' }}
                                                                class="btn btn-primary btn-sm btn-sign-up onclick-disable">{{ children|length == 0 ? 'Ingen barn' : 'Meld p책' }}</button>
                                                    {% endif %}
                                                    <a href="{{ path('course_info', {id: course.id}) }}"
                                                       class="btn btn-sm btn-default">Mer
                                                        info</a>
                                                </div>
                                            </footer>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var $timeTables = $('.time-table');
            $timeTables.each(function () {
                sortTableByAttribute($(this), 'timestamp', true);
            });

            //Sign child up to course when sign up button is clicked
            $('.btn-sign-up').each(function () {
                $(this).on('click', function () {
                    var $select = $(this).closest('footer').find('select').first();
                    var childId = $select.val();
                    var courseId = $select.attr('courseId');
                    window.location = Routing.generate('cp_sign_up_course_child', {id: courseId, child: childId});
                })
            });
        })
    </script>
{% endblock %}