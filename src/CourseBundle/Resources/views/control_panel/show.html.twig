{% extends '@Admin/_base/admin_base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Kurs {{ semester }}</h1>
        <hr>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="dropdown">
                    <button class="btn btn-primary btn-flat btn-sm dropdown-toggle" type="button" data-toggle="dropdown">{{ semester }}
                        <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        {% for sem in semesters %}
                            <li><a href="{{ path('cp_course', {'semester':sem.id}) }}">{{ sem }}</a></li>
                        {% endfor %}
                    </ul>
                    <a class="btn btn-success btn-sm btn-flat" href="{{ path('cp_create_course') }}">Nytt kurs <i class="fa fa-plus"></i></a>
                </div>
            </div>
        </div>
        <br>
        <div class="row text-center">
            {% if not courses|length %}
                <h3>Det finnes ingen kurs dette semesteret</h3>
                <a href="{{ path('cp_create_course') }}"><h4>Opprett nytt kurs</h4></a>
            {% endif %}
            {% for course in courses %}
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="box box-warning">
                        <div class="box-body course">
                            <div class="img-container">
                                <img src="{{ course.courseType.image.filePath }}" alt="{{ course.name }}">
                            </div>
                            <div>
                                <h3>{{ course.name }}</h3>
                                <p class="description">{{ course.description }}<br>
                                {{ course.participants|length }}/{{ course.participantLimit }} p√•meldt</p>
                            </div>
                            <footer>
                                <div class="row">
                                    <a href="{{ path('cp_course_time_table', {'id': course.id}) }}" class="btn btn-success btn-flat">Timeplan</a>
                                    <a href="{{ path('cp_edit_course', {'id': course.id}) }}" class="btn btn-primary btn-flat">Endre</a>
                                    <a href="{{ path('cp_delete_course', {'id': course.id}) }}" class="btn btn-danger btn-flat onclick-disable">Slett</a>
                                </div>
                                <div class="row">
                                    <a href="{{ path('cp_course_participants', {'id': course.id}) }}" class="btn btn-info btn-flat">Deltakere</a>
                                    <a href="{{ path('cp_course_tutors', {'id': course.id}) }}" class="btn btn-info btn-flat">Veiledere</a>
                                </div>
                            </footer>
                            </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}