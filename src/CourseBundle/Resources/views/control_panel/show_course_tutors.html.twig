{% extends '@CodeClubAdmin/_base/admin_base.html.twig' %}

{% block body %}
    <header class="content-header">
        <a class="btn btn-default btn-sm float-right" href="{{ path('cp_course') }}"><i class="fa fa-reply"></i> Alle kurs</a>
        <h1>Kursveiledere {{ course.name }}</h1>
        <p>{{ course.description }}</p>

    </header>
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Veiledere</h3>
            </div>
            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-striped table-fixed">
                        <thead>
                        <tr>
                            <th>Navn</th>
                            <th>E-post</th>
                            <th>Telefon</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for tutor in course.tutors %}
                            <tr>
                                <td>{{ tutor.fullName }}</td>
                                <td>{{ tutor.email }}</td>
                                <td>{{ tutor.phone }}</td>
                                <td><a class="text-danger no-text-decoration onclick-disable" href="{{ path('withdraw_from_course_tutor', {courseId: course.id, tutorId: tutor.id}) }}">Fjern</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% if (not course.tutors|length) %}<h5 class="text-bold text-warning">Det er ingen veiledere p√• dette kurset</h5>{% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}

{% endblock %}

