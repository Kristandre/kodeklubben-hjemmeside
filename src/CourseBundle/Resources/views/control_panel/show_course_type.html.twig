{% extends 'base/control_panel/admin_base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Kurstyper</h1>
        <hr>
    </section>

    <section class="content">
        <!-- Courses -->
        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('cp_create_course_type') }}" class="btn btn-flat btn-sm btn-success">Ny kurstype <i class="fa fa-plus"></i></a>
            </div>
        </div>
        <br>
        <div class="row text-center">
            {% for course in courses %}
                <div class="col-md-3 col-sm-6">
                    <div class="box box-primary">
                        <div class="box-body course">
                            <div class="img-container">
                                <img src="{{ course.image.filePath }}" alt="{{ course.name }}">
                            </div>
                            <div>
                                <h3>{{ course.name }}</h3>
                                <p class="description">{{ course.description }}</p>
                            </div>
                            <div class="pull-down">
                                <footer>
                                    <a href="{{ path('cp_edit_course_type', {'id': course.id}) }}" class="btn btn-primary btn-flat">Endre</a>
                                    <a href="{{ path('cp_delete_course_type', {'id': course.id}) }}" class="btn btn-danger btn-flat onclick-disable">Slett</a>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}