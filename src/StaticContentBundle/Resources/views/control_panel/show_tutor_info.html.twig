        <h1>Statisk innhold: Veileder</h1>
        <hr>
    </section>

    <section class="content">
        {% include '@StaticContent/control_panel/form_textarea.html.twig' with {'label': label, 'buttonId': buttonId, 'idString': idString, 'buttonLabel': buttonLabel, 'rows': rows} %}
    </section>
{% endblock %}
{% block javascripts %}
